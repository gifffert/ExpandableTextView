<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_text_expand_animation_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/collapsedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collapsed Text"
        android:textSize="14sp"
        />

    <RelativeLayout
        android:id="@+id/expandableRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingEnd="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="4dp">

        <ImageView
            android:id="@+id/switcherImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/hintTextView"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/hintTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="Expand"
            />

        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/hintTextView"
            android:background="@color/gray"
            />
    </RelativeLayout>

</LinearLayout>